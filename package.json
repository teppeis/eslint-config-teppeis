{
  "name": "eslint-config-teppeis",
  "description": "ESLint config set for me!",
  "version": "18.0.0",
  "author": "Teppei Sato <teppeis@gmail.com>",
  "engines": {
    "node": "^18.17.0 || >=20.5.0"
  },
  "main": "lib/index.mjs",
  "files": [
    "bin",
    "lib",
    "templates"
  ],
  "bin": {
    "eslint-config-teppeis": "bin/eslint-config-teppeis.mjs"
  },
  "scripts": {
    "lint": "run-p -l -c --aggregate-output lint:*",
    "lint:eslint": "eslint --max-warnings 0 .",
    "lint:prettier": "prettier --check .",
    "fix": "run-s fix:prettier fix:eslint",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "test": "run-p -l -c --aggregate-output lint:* test:*",
    "test:examples": "./examples/lint-all.sh",
    "test:unit": "mocha test"
  },
  "dependencies": {
    "@eslint/eslintrc": "^2.1.2",
    "@eslint/js": "^8.49.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "deepmerge": "^4.3.1",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsdoc": "^46.7.0",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "globals": "^13.21.0"
  },
  "devDependencies": {
    "@types/deepmerge": "^2.2.0",
    "@types/eslint": "^8.44.2",
    "@types/node": "^18.17.15",
    "@types/react": "^18.2.22",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "glob": "^10.3.4",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "eslint": "^8.49.0",
    "prettier": "^3.0.3"
  },
  "peerDependenciesMeta": {
    "prettier": {
      "optional": true
    }
  },
  "homepage": "https://github.com/teppeis/eslint-config-teppeis",
  "repository": "https://github.com/teppeis/eslint-config-teppeis",
  "bugs": {
    "url": "https://github.com/teppeis/eslint-config-teppeis"
  },
  "keywords": [
    "eslint",
    "eslint-config",
    "prettier",
    "typescript"
  ],
  "license": "MIT"
}
